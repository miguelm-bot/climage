{
  "name": "climage",
  "version": "0.3.1",
  "description": "Generate images and videos from the terminal via multiple providers (xAI, Google, fal)",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/miguelm-bot/climage"
  },
  "type": "module",
  "bin": {
    "climage": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "node --enable-source-maps dist/cli.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier --write"
  },
  "dependencies": {
    "@fal-ai/client": "^1.8.4",
    "@google/genai": "^1.38.0",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
